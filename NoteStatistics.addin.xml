<Addin id="NoteStatisticsAddin"
	namespace="Tomboy"
	name="Note Statistics"
	author="Eitan Isaacson"
    description="Gives basic statistics about your note, like word and line count."
	category="Tools"
	defaultEnabled="false"
	version="0.2">

	<Runtime>
		<Import assembly="NoteStatistics.dll" />
	</Runtime>

	<Dependencies>
		<Addin id="Tomboy" version="0.10" />
	</Dependencies>

	<Extension path="/Tomboy/NoteAddins">
		<NoteAddin type="Tomboy.NoteStatistics.NoteStatisticsAddin" />
	</Extension>
</Addin>
